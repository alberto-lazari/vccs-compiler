n in N
k in K
x in Var
a in A

e ::= n
    | (e)
    | x
    | e + e
    | e - e
    | e * e
    | e / e
    | e mod e

b ::= true | false
    | (b)
    | e = e
    | e < e
    | e > e
    | not b
    | b and b
    | b or b

act ::= τ | a(x) | 'a(e)

params(t) ::= t | t, el

L ::= {params(a)}

f ::= params(a/a)

P ::= 0
    | (P)
    | act. P
    | k
    | k(params(e))
    | if b then P
    | P + P
    | P | P
    | P[f]
    | P \ L

π ::= P
    | k = P; π
    | k(params(x)) = P; π
