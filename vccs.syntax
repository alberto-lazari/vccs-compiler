n in ℕ
k in K
x in Var
a in A

abop ::= + | - | * | / | mod

e ::= n
    | (e)
    | x
    | e abop e

bbop ::= and | or | = | ≠ | < | > | ≤ | ≥

b ::= true | false
    | (b)
    | not b
    | b bbop b

act ::= τ | a(x) | 'a(e)

params(t) ::= t | t, el

L ::= {params(a)}

f ::= params(a/a)

P ::= 0
    | (P)
    | act. P
    | k
    | k(params(e))
    | if b then P
    | P + P
    | P | P
    | P[f]
    | P \ L

π ::= P
    | k = P; π
    | k(params(x)) = P; π
